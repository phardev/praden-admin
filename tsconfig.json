{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "es2021",
    "moduleResolution": "nodenext",
    "verbatimModuleSyntax": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@adapters/*": ["src/adapters/*"],
      "@core/*": ["src/core/*"],
      "@store/*": ["src/store/*"],
      "@utils/*": ["src/utils/*"]
    },
    "types": ["vitest/globals", "node", "@types/jsdom", "@nuxt/schema"],
    "module": "NodeNext"
  },
  "include": [".nuxt/types", "types", "src", "utils", "vitest.config.mjs"]
}
